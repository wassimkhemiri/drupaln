{
  "extends": [
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "window": true,
    "Drupal": true,
    "drupalSettings": true,
    "drupalTranslations": true,
    "domready": true,
    "jQuery": true,
    "_": true,
    "matchMedia": true,
    "Backbone": true,
    "Modernizr": true,
    "CKEDITOR": true,
    "WOW": true,
    "bootstrapVersion": true,
    "isElementHidden": true,
    "getBootstrapBreakPoints": true
  },
  "rules": {
    "camelcase": 0,
    "consistent-return": 0,
    "eqeqeq": [2, "smart"],
    "guard-for-in": 2,
    "func-names": 0,
    "no-alert": 0,
    "no-constant-condition": 2,
    "no-new": 0,
    "no-param-reassign": 0,
    "no-shadow" : 2,
    "no-undef": 2,
    "no-underscore-dangle": 0,
    "no-unused-vars": [2, {"vars": "local", "args": "none"}],
    "no-use-before-define": 2,
    "strict": 0,
    "no-plusplus": 0,
    "no-restricted-properties": [0, {
      "object": "window",
      "property": "isNaN"
    }]
  }
}
